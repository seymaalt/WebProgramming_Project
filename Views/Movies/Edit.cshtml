
@using eCommerce.Data;
@using eCommerce.Data.Enums;
@using eCommerce.Data.ViewModels;
@model NewMovieVM

@{
    ViewData["Title"] = "Film Güncelle";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Film Güncelle</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                         <div class="form-group">
                                <label asp-for="Name" class="control-label">İsim</label>
                                <input asp-for="Name" class="form-control" style="border-radius: 70px;" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label">Başlangıç tarihi</label>
                                <input asp-for="StartDate" type="date" class="form-control" style="border-radius: 70px;"/>
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="EndDate" class="control-label">Bitiş tarihi</label>
                                <input asp-for="EndDate" type="date" class="form-control" style="border-radius: 70px;"/>
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label">Fiyat</label>
                                <input asp-for="Price" type="number" class="form-control" style="border-radius: 70px;"/>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageURL" class="control-label">Fotograf URL</label>
                                <input asp-for="ImageURL" class="form-control" style="border-radius: 70px;" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CinemaId" class="control-label">Sinema ID</label>
                                <select asp-for="CinemaId" class="form-control" asp-items="ViewBag.Cinemas" style="border-radius: 70px;"></select>
                                <span asp-validation-for="CinemaId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MovieCategory" class="control-label">Film kategorisi</label>
                                <select asp-for="MovieCategory" style="border-radius: 70px;" class="form-control" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
                                <span asp-validation-for="MovieCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProducerId" class="control-label">Ürün ID</label>
                                <select asp-for="ProducerId" style="border-radius: 70px;" class="form-control" asp-items="ViewBag.Producers"></select>
                                <span asp-validation-for="ProducerId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ActorIds" class="control-label">Aktör IDleri</label>
                                <select asp-for="ActorIds" style="border-radius: 20px;" class="form-control" asp-items="ViewBag.Actors" multiple></select>
                                <span asp-validation-for="ActorIds" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label">Açıklama</label>
                                <textarea asp-for="Description" style="border-radius: 70px;" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Ekle" class="btn btn-outline-success float-right" style="background-color:#F8E71C;border-style: none;border-radius: 100px;"/>
                        <a class="btn btn-outline-secondary" asp-action="Index" style="background-color:#F8E71C;border-style: none;border-radius: 100px;">Hepsini göster</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#ImageURL").val();
        });
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}
