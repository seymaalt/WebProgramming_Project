@model Actor

@{
    ViewData["Title"] = "Add a new actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfilePictureURL" class="control-label">Profil fotoğrafı URL</label>
                        <input asp-for="ProfilePictureURL" class="form-control" readonly style="border-radius: 70px;"/>
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label">Ad Soyad</label>
                        <input asp-for="FullName" class="form-control" readonly style="border-radius: 70px;"/>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label">Biyografi</label>
                        <input asp-for="Bio" class="form-control" readonly style="border-radius: 70px;"/>
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                    <span style="padding:5px;"></span>
                    <div class="form-group">
                        <a class="btn btn-outline-success float-right" asp-action="Güncelle" asp-route-id="@Model.Id" style="background-color:#F8E71C;border-style: none;border-radius: 100px;">Güncelle</a>
                        <a class="btn btn-outline-secondary" asp-action="Index" style="background-color:#F8E71C;border-style: none;border-radius: 100px;">Hepsini göster</a>
                    </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
    </script>
}