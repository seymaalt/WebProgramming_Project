<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eTickets</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        
            <div class="container-fluid" style=" display: flex;
    align-items:center ;
padding:15px;
    justify-content: space-between;
    background:#474747">
               <img src="https://kdaidggt0f3v.merlincdn.net/dist/assets/img/logo.svg" alt="biletinial" href="#" class="logo">
                <span style="padding: 5px;"></span>
                <div class="navbar-collapse  d-sm-inline-flex ">
                    <ul class="navbar-nav flex-grow-1" style="flex-direction: row;">
                        <li class="nav-item">
                            <a class="btn  my-2 my-sm-0" asp-area="" asp-controller="Movies" asp-action="Index"  style=" font-size: 20px; color: white;border-style: none;border-radius: 50px;">Filmler</a>
                           
                        </li>
                         <span style="padding: 5px;"></span>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li>
                                    <a class="btn  my-2 my-sm-0" asp-controller="Cinemas" asp-action="Index" style="    font-size: 0.9375rem; color: white;border-style: none;border-radius: 50px;"><i class="bi bi-camera-reels" style=" font-size: 20px; border-style: none;border-radius: 50px;"></i> Sinemalar</a>
                            </li>
                            <li>
                                    <a class="btn  my-2 my-sm-0" asp-controller="Producers" asp-action="Index" style="    font-size: 0.9375rem; color: white;border-style: none;border-radius: 50px;"><i class="bi bi-headset" style=" font-size: 20px; border-style: none;border-radius: 50px;"></i> Yapımcılar</a>
                            </li>
                            <li>
                                    <a class="btn  my-2 my-sm-0" asp-controller="Actors" asp-action="Index" style="    font-size: 0.9375rem; color: white;border-style: none;border-radius: 50px;"><i class="bi bi-person-square" style=" font-size: 20px; border-style: none;border-radius: 50px;"></i> Aktörler</a>
                            </li>
                             <li>
                                <a class="btn  my-2 my-sm-0" asp-controller="Account" asp-action="Users" style="    font-size: 0.9375rem; color: white;border-style: none;border-radius: 50px;">
                                    <i class="bi bi-people" style=" font-size: 20px; border-style: none;border-radius: 50px;"></i> Kullanıcılar
                                </a>
                            </li>
                            
                        }
                         <span style="margin-left: 40px;"></span>
                        <form class="d-inline-flex my-2 my-lg-0" asp-controller="Movies" asp-action="Filter" >
                        <input name="searchString" type="text" class="form-control" placeholder="Film ara..." aria-label="Recipient's username" aria-describedby="button-addon2" style="background-color:#F8E71C;border-style: none;border-radius: 50px;">
                         <span style="padding: 5px;"></span>
                        <button class="" style="background-color:#F8E71C;border-style: none;border-radius: 100px;" type="submit"><i class="bi bi-search"></i></button>
                    </form>

                    </ul>

                    

                    <ul class="navbar-nav">
                        @await Component.InvokeAsync("ShoppingCartSummary")
                    </ul>

                    <partial name="_Identity.cshtml" />
                </div>
            </div>
            <span style="padding:10px;"></span>
       
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>

    <footer class="border-top footer text-muted position-relative">
        <div class="container">
            &copy; 2021 - eTickets
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/css/site.css" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
